# Example configuration file for alarm

[Day]
# Choose 'today' if you do not want to regulate daily day.
 DAY=today

[Alarm Time]
# Constant alarm time.
 ALARM_TIME=07:00

[Alarm Attempts]
# Select number for attempts 
 attempts=5

[Path]
# Path statements sound files
 SONG=/usr/share/alarm/sounds/funny.mp3
